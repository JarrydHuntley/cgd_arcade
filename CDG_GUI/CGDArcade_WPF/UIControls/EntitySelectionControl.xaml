<UserControl x:Name="entityControl" x:Class="CGDArcade_WPF.UIControls.EntitySelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="240" d:DesignWidth="300" BorderThickness="2" BorderBrush="#FF4BFF07" MouseUp="entityControl_MouseUp" MouseEnter="entityControl_MouseEnter" >
    <Grid x:Name="entityGrid">
        <MediaElement x:Name="entityMediaElement" HorizontalAlignment="Center" Height="169" VerticalAlignment="Top" Width="300"/>
        <TextBlock x:Name="entityTitle" Text="Label" HorizontalAlignment="Center" Margin="0,174,0,0" VerticalAlignment="Top" Width="300" Height="56" 
               FontFamily="/CGDArcade_WPF;component/Assets/Fonts/#Atari Font Full Version" Foreground="White" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
