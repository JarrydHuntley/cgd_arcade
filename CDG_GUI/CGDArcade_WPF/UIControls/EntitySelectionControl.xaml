<UserControl x:Name="entityControl" x:Class="CGDArcade_WPF.UIControls.EntitySelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="240" d:DesignWidth="300" BorderThickness="2" BorderBrush="White" MouseUp="entityControl_MouseUp">
    <Grid x:Name="entityGrid">
        <MediaElement x:Name="entityMediaElement" HorizontalAlignment="Center" Height="169" VerticalAlignment="Top" Width="300"/>
        <Label x:Name="entityTitle" Content="Label" HorizontalAlignment="Center" Margin="0,174,0,0" VerticalAlignment="Top" Width="300" Height="56" 
               HorizontalContentAlignment="Center"
               FontFamily="/CGDArcade_WPF;component/Assets/Fonts/#Atari Font Full Version" BorderBrush="Black" Foreground="White"/>

    </Grid>
</UserControl>
